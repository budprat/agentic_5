# Solopreneur Oracle System Configuration
# Copy this file to solopreneur_config.env and fill in your values

# Core Configuration (REQUIRED)
export GOOGLE_API_KEY="your-gemini-api-key"
export SOLOPRENEUR_DB="/home/solopreneur/databases/solopreneur.db"

# Optional External Services
# Uncomment and configure if you want to use these services

# Neo4j for knowledge graph (optional)
# export NEO4J_URI="bolt://localhost:7687"
# export NEO4J_USER="neo4j"
# export NEO4J_PASSWORD="password"

# GitHub for repository monitoring (optional)
# export GITHUB_TOKEN="your-github-token"

# System Configuration
export SOLOPRENEUR_LOG_LEVEL="INFO"
export ENABLE_PARALLEL_EXECUTION="true"
export MAX_CONCURRENT_AGENTS="10"

# Performance tuning
export AGENT_STARTUP_DELAY="0.1"  # Delay between starting agents
export HEALTH_CHECK_TIMEOUT="5"   # Timeout for health checks