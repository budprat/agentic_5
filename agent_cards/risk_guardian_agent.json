{
  "name": "Risk Guardian",
  "description": "Portfolio risk management and compliance monitoring agent",
  "version": "1.0.0",
  "endpoint": "http://localhost:10014",
  "capabilities": [
    "risk_assessment",
    "portfolio_analysis",
    "stress_testing",
    "compliance_checking"
  ],
  "specialization": "VaR calculations, portfolio optimization, and risk mitigation strategies",
  "model": {
    "provider": "google",
    "name": "gemini-2.0-flash",
    "temperature": 0.0
  },
  "tools": [
    {
      "name": "calculate_var",
      "description": "Calculate Value at Risk (VaR) at 95% confidence"
    },
    {
      "name": "stress_test",
      "description": "Run market crash scenarios and black swan events"
    },
    {
      "name": "check_compliance",
      "description": "Verify trades against risk limits and regulations"
    }
  ],
  "risk_thresholds": {
    "max_var_95": 0.15,
    "max_sharpe_degradation": 0.2,
    "max_concentration": 0.25,
    "min_liquidity_ratio": 0.3,
    "max_correlation": 0.7
  },
  "data_sources": [
    "portfolio_data",
    "market_volatility",
    "correlation_matrices",
    "historical_drawdowns"
  ],
  "output_format": {
    "risk_score": "0-100",
    "risk_level": "low/medium/high/critical",
    "approval_status": "approved/rejected/needs_review",
    "portfolio_metrics": {
      "var_95": "percentage",
      "sharpe_ratio": "risk-adjusted return",
      "max_drawdown": "percentage"
    },
    "stress_tests": {
      "market_crash_scenarios": "portfolio impact",
      "black_swan_event": "extreme loss scenario"
    }
  },
  "integration": {
    "supabase_tables": [
      "risk_metrics",
      "portfolios",
      "positions"
    ],
    "mcp_connections": []
  }
}