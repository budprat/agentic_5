{
  "name": "Report Synthesizer",
  "description": "Comprehensive investment report generation agent",
  "version": "1.0.0",
  "endpoint": "http://localhost:10016",
  "capabilities": [
    "report_generation",
    "data_aggregation",
    "markdown_formatting",
    "executive_summaries"
  ],
  "specialization": "Creating professional investment reports from multi-agent analysis data",
  "model": {
    "provider": "google",
    "name": "gemini-2.0-flash",
    "temperature": 0.0
  },
  "tools": [
    {
      "name": "gather_analysis_data",
      "description": "Aggregate data from all analysis agents"
    },
    {
      "name": "generate_report",
      "description": "Create structured investment reports in multiple formats"
    },
    {
      "name": "create_visualizations",
      "description": "Generate charts and graphs for reports"
    }
  ],
  "report_types": [
    "comprehensive",
    "summary",
    "alert",
    "weekly_digest",
    "portfolio_review"
  ],
  "output_formats": [
    "json",
    "markdown",
    "pdf_ready",
    "html"
  ],
  "report_structure": {
    "executive_summary": {
      "recommendation": "BUY/HOLD/SELL",
      "confidence": "high/medium/low",
      "thesis": "investment thesis"
    },
    "market_analysis": {
      "technical": "technical findings",
      "fundamental": "fundamental analysis",
      "sentiment": "market sentiment",
      "trends": "search correlations"
    },
    "risk_assessment": {
      "primary_risks": "key risks",
      "mitigation": "strategies"
    },
    "recommendations": {
      "action_items": "prioritized actions",
      "position_sizing": "allocation advice"
    }
  },
  "integration": {
    "supabase_tables": [
      "investment_research",
      "trading_signals",
      "sentiment_data",
      "market_trends"
    ],
    "mcp_connections": [
      "notion_mcp"
    ]
  }
}